<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".VerJugadores">

    <Button
        android:id="@+id/btn_ir_crear_jugador"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="Crear Jugador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704" />

    <Button
        android:id="@+id/btn_cancelar_jugador"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginStart="52dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_ir_crear_jugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_ir_crear_jugador"
        app:layout_constraintTop_toTopOf="@+id/btn_ir_crear_jugador"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/ls_ver_jugadores"
        android:layout_width="270dp"
        android:layout_height="332dp"
        android:layout_marginBottom="40dp"
        android:background="#D148E8"
        app:layout_constraintBottom_toTopOf="@+id/btn_ir_crear_jugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_Lista_Jugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Jugadores"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/ls_ver_jugadores"
        app:layout_constraintEnd_toEndOf="@+id/ls_ver_jugadores"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ls_ver_jugadores"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688" />

</androidx.constraintlayout.widget.ConstraintLayout>