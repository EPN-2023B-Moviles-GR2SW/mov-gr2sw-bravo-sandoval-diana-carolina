<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".editarJugador">

    <TextView
        android:id="@+id/txt_agregar_jugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Jugador"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_nombre_jugador"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_nombre_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_editar_nombre_jugador"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <EditText
        android:id="@+id/input_editar_nombre_jugador"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#707070"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_edad"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_edad"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_editar_edad" />

    <EditText
        android:id="@+id/input_editar_idJugador"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:hint="id Jugador"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#707070"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_nombre_jugador"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_nombre_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_editar_nombre_jugador" />

    <EditText
        android:id="@+id/input_editar_edad"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="Edad"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#707070"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_estatura"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_estatura"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_editar_estatura" />

    <EditText
        android:id="@+id/input_editar_estatura"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Estatura"
        android:textColor="#000000"
        android:textColorHint="#707070"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/input_editar_numero"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_numero"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_editar_numero" />

    <EditText
        android:id="@+id/input_editar_numero"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Numero"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#707070"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardarN_jugador"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardarN_jugador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_guardarN_jugador" />

    <Button
        android:id="@+id/btn_guardarN_jugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />

    <Button
        android:id="@+id/btn_regresar_lv_jugadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_guardarN_jugador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toEndOf="@+id/btn_guardarN_jugador"
        app:layout_constraintTop_toTopOf="@+id/btn_guardarN_jugador"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>